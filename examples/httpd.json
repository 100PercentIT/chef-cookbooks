{ 
  "httpd": {
    "keepalive": "Off",
    "max_keepalive_requests": 100,
    "keepalive_timeout": 15,
    "start_servers": 8,
    "min_spare_servers": 5,
    "max_spare_servers": 20,
    "server_limit": 256,
    "max_clients": 256,
    "max_requests_per_child": 4000,
    "php_memory_limit": "32M",
    "apc_enabled": 1,
    "apc_shm_segments": 1,
    "apc_optimization": 1,
    "apc_enable_cli": 1,
    "apc_shm_size": 32
  },
  "recipes": [ "httpd" ] 
}
